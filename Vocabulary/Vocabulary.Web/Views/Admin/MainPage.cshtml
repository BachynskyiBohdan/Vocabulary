@model GlobalListViewModel
@{
    ViewBag.Title = "MainPage";
}

@section header
{
    @{Html.RenderPartial("PartialAdminHeader");}
}

<div class="main">
    <div class="layout-positioner">
        
        <div class="main-header">
            @if (TempData.ContainsKey("Success"))
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData.ContainsKey("Error"))
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            
            @Html.ActionLink("Glossaries", "GlossariesMainPage", null, new { @class = "left btn-primary", title = "Add new phrase" })

            <span>Phrases Main Page</span>
            
            <div class="navigation-menu">
                @Html.ActionLink("Add phrase", "AddNewGlobalPhrase", null, new {title = "Add new phrase"})
                
                @Html.ActionLink("Parse phrases", "AddNewGlobalPhraseByParse", null, new {title = "Add new phrases by parsing pages"})
            </div>
        </div>

        <div class="layout-collumn layout-collumn-menu">
            
        </div>

        <div class="layout-collumn layout-collumn-main container-fluid">
            <div class="words-container">
                <table class="table table-hover">
                    <thead>
                        <tr onclick="sortTable()">
                            <th>ID</th>
                            <th>Phrase</th>
                            <th>PhraseType</th>
                            <th>Transcription</th>
                            <th>Frequency</th>
                            <th>LanguageID</th>
                            <th>Language</th>
                            <th>Audio</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var phrase in Model.GlobalPhrases)
                        {
                            <tr>
                                <td>@phrase.Id</td>
                                <td>@phrase.Phrase</td>
                                <td>@phrase.PhraseType</td>
                                <td>@phrase.Transcription</td>
                                <td>@phrase.Frequency</td>
                                <td>@phrase.LanguageId</td>
                                <td>@Model.Languages[phrase.LanguageId]</td>
                                <td>
                                    <img src="~/Content/soundIcon.png" style="width: 25px; height: 25px;" onclick="PlayAudio(@phrase.Id.ToString())" />
                                    
                                    <audio id="@phrase.Id.ToString()">
                                        <source src="@Url.Action("GetPhraseAudio", new { id = phrase.Id })" />
                                    </audio>
                                </td>
                                <td>
                                    <div class="word-editor">
                                        @Html.ActionLink("Edit", "EditGlobalPhrase", new {id = phrase.Id}, new {title = "Edit Phrase"})
                                        @Html.ActionLink("Translations", "TranslationMainPage", new { phraseId = phrase.Id }, new { title = "Translations  Main Page" })
                                        @Html.ActionLink("Examples", "ExampleMainPage", new { phraseId = phrase.Id }, new { title = "Examples Main Page" })
                                        @Html.ActionLink("Delete", "DeleteGlobalPhrase", new { id = phrase.Id }, new { title = "Delete Phrase" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @Html.Action("GetPhrasesNavigation")
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/Users/mainPage.js"></script>
}
