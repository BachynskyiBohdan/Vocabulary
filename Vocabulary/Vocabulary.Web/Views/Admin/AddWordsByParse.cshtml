@model string
@{
    ViewBag.Title = "Add words by parse";
}

@section header
{
    @{ Html.RenderPartial("PartialAdminHeader");}
}

<div class="main">
    <div class="layout-positioner">
        <div class="main-header">
            <h1>Добавление новых слов с помощью парсинга веб-страниц</h1>
        </div>
        <div class="form-container">
            @using(Html.BeginForm())
            {
                <div>
                    @Html.TextArea("model", Model,
                         new { placeholder = "words separated by new line", @class = "form-control" })
                    @Html.ValidationMessage("model")
                </div>
                
                <div class="field-container">
                    <input type="submit" class="btn btn-default" value="Начать парсинг"/>
                </div>
            }
        </div>
    </div>
</div>