@model ExampleViewModel

@{
    ViewBag.Title = "Добавить новый пример";
}

<div class="main">
    <div class="layout-positioner">
        <div class="main-header">
            <h1>Добавление нового примера для: @Session["GlobalPhrase"]</h1>
        </div>
        <div class="form-container">
            @using (Html.BeginForm("AddExample", "Examples", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                @Html.HiddenFor(x => x.GlobalExample.PhraseId)
                <div class="field-container ">
                    @Html.TextBoxFor(x => x.GlobalExample.Phrase, new { placeholder = "Phrase", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.GlobalExample.Phrase)
                </div>
                <div class="field-container ">
                    @Html.TextBoxFor(x => x.GlobalExample.Translation, new { placeholder = "Translation", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.GlobalExample.Translation)
                </div>
                <div class="field-container ">
                    @Html.LabelFor(x => x.SelectedTranslation)
                    @Html.DropDownListFor(x => x.SelectedTranslation, Model.Translations, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.SelectedTranslation)
                </div>
                
                <div class="field-container">
                    <label for="audio">Audio file:</label>
                    <input type="file" id="audio" name="audio" />
                </div>
                
                <div class="field-container">
                    <input type="submit" class="btn btn-default" value="Добавить пример" />
                </div>
            }
        </div>
    </div>
</div>
