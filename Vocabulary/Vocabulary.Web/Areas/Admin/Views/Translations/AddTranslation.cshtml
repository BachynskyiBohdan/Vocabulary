@model TranslationViewModel

@{
    ViewBag.Title = "Добавить новый перевод";
}


<div class="main">
    <div class="layout-positioner">
        <div class="main-header">
            <h1>Добавление нового перевода для: @Session["GlobalPhrase"]</h1>
        </div>
        <div class="form-container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(x => x.GlobalTranslation.GlobalPhraseId)
                <div>
                    @Html.TextAreaFor(x => x.GlobalTranslation.TranslationPhrase, new { placeholder = "Translation", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.GlobalTranslation.TranslationPhrase)
                </div>
                <div class="field-container ">
                    @Html.LabelFor(x => x.SelectedLanguage)
                    @Html.DropDownListFor(x => x.SelectedLanguage, Model.Languages, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.SelectedLanguage)
                </div>
                <div class="field-container">
                    <input type="submit" class="btn btn-default" value="Добавить перевод" />
                </div>
            }
        </div>
    </div>
</div>